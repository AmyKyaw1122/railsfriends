<% if user_signed_in? %>
  <h1>Friends Lists</h1>

  <table class="table table-striped table-bordered table-hover" >
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends_dbs.each do |friends_db| %>
      <% if friends_db.user == current_user %>
        <tr>
          <td><%= link_to friends_db.first_name+' '+friends_db.last_name,friends_db %></td>
          <td><%= friends_db.email %></td>
          <td><%= friends_db.phone %></td>
          <td><%= friends_db.twitter %></td>
          <td><%= link_to 'Delete', friends_db, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger btn-sm" %></td>

            <!--
              <% if friends_db.user == current_user%>
                <td><%= link_to 'Edit', edit_friends_db_path(friends_db) %></td>
                <td><%= link_to 'Destroy', friends_db, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% else %>
                  <td></td>
                  <td></td>
              <% end %>
               --> 
              </tr>
       <% end %>
       <% end %>
    </tbody>
  </table>

  <br>

    <%= link_to 'New Friends', new_friends_db_path,class:"btn btn-primary" %>
